<style type="text/css">
@tailwind components;
@layer components {
  .checklist{
    @apply bg-white shadow-md rounded px-6 py-4 w-full;
    box-shadow: 6px 6px #0a2240, 6px 6px 15px rgb(35 96 146 / 20%);
  }
  .checklist__title{
    @apply pt-1 pb-2 text-2xl font-bold border-b border-gray-200 mx-1 mb-1;
  }
  .checklist__item{
    @apply text-xl md:text-2xl lg:text-lg flex items-center justify-between mt-3 cursor-pointer order-1 transition-all transform hover:translate-x-1.5;
  }

  .checklist__item input{
    @apply transform scale-150;
  }

  .checklist__item .checklist__text{
    @apply ml-3 transition-colors duration-300;
  }
}
</style>
<section class="section bg-lake" id="checklists">
