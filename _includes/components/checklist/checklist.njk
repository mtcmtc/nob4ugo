      <div class="text-center">
        <h2 class="text-white">Checklists</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
        <div class="pregame checklist" x-data="checklist()">
          <h3 class="checklist__title no-margin">Pregame</h3>
          <ul class="flex flex-col mb-6">
            <template x-for="item in pregame" :key="item.title">
              <li 
                class="checklist__item"
                @click="item.isComplete = !item.isComplete">
                <div class="flex items-center" :class="{ 'line-through' : item.isComplete }">
                  <input label="checkbox" type="checkbox" x-model="item.isComplete">
                  <div
                    class="checklist__text"
                    :class="{ 'text-gray-400' : item.isComplete}"
                    x-text="item.title"></div>
                </div>
              </li>
            </template>
          </ul>
        </div>
        <div class="atgame checklist" x-data="checklist()">
          <h3 class="checklist__title no-margin">At Game</h3>
          <ul class="flex flex-col mb-6">
            <template x-for="item in atgame" :key="item.title">
